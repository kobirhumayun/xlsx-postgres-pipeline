// This schema is minimal as we are using "Flexible Import" into arbitrary tables.
// The app code handles dynamic table interactions directly via SQL.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model SavedQuery {
  id           String   @id @default(uuid())
  name         String
  description  String?
  query        String
  databaseName String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
